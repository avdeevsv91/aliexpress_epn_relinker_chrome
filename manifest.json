{
	"manifest_version": 2,
	"author": "TheSoulTaker48",
	"name" : "AliExpress reLinker (ePN)",
	"short_name" : "AliExpress reLinker",
	"description" : "Automatic replacement of links to ePN DeepLink for AliExpress.",
	"version" : "1.0.0",
	"icons": {
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon128.png"
	},
	"background": {
		"scripts": [
			"background.js"
		]
	},
	"options_page": "options.html",
	"content_scripts": [
		{
			"js": [
				"jquery-1.12.1.min.js",
				"content.js"
			], 
			"matches": [
				"*://aliexpress.com/*",
				"*://*.aliexpress.com/*"
			], 
			"run_at": "document_idle"
		}
	]
}
